{% import 'components/_event_mixin.j2' as events %}
{% set kind = _component_context.kind | default('primary') %}
{% set size = _component_context.size | default('md') %}
{% set disabled = _component_context.disabled | default(false) %}
{% set busy = _component_context.busy | default(false) %}
{% set active = _component_context.active | default(false) %}
{% set focus = _component_context.focus | default(false) %}
{% set hover = _component_context.hover | default(false) %}
{% set button_type = _component_context.type | default('button') %}
{% set additional_class = _component_context.class | default('') %}
{% set label = _component_context.label | default(_component_context.content) | default('') %}
{% set icon_placement = _component_context.iconPlacement | default('before') %}
{% set icon = _component_context.icon | default('') %}
{% set icon_color = _component_context.iconColor | default('hemelblauw') %}
{% set full_width = _component_context.fullWidth | default(false) %}

{# Map RVO button kinds to Utrecht appearances - mirrors RVO base project logic #}
{% set appearance = '' %}
{% if kind == 'primary' or kind == 'warning' %}
    {% set appearance = 'primary-action-button' %}
{% elif kind == 'secondary' %}
    {% set appearance = 'secondary-action-button' %}
{% elif kind == 'subtle' or kind == 'warning-subtle' %}
    {% set appearance = 'subtle-button' %}
{% endif %}

{# Build CSS classes - add appropriate classes per button kind #}
{% set css_classes = ['utrecht-button'] %}
{% if kind == 'tertiary' %}{% set css_classes = css_classes + ['utrecht-button--rvo-tertiary-action'] %}{% endif %}
{% if kind == 'quaternary' %}{% set css_classes = css_classes + ['utrecht-button--rvo-quaternary-action'] %}{% endif %}
{% if active %}{% set css_classes = css_classes + ['utrecht-button--active'] %}{% endif %}
{% if busy %}{% set css_classes = css_classes + ['utrecht-button--busy'] %}{% endif %}
{% if hover %}{% set css_classes = css_classes + ['utrecht-button--hover'] %}{% endif %}
{% if focus %}{% set css_classes = css_classes + ['utrecht-button--focus'] %}{% endif %}
{% if focusVisible %}{% set css_classes = css_classes + ['utrecht-button--focus-visible'] %}{% endif %}
{% if size == 'xs' %}{% set css_classes = css_classes + ['utrecht-button--rvo-xs'] %}{% endif %}
{% if size == 'sm' %}{% set css_classes = css_classes + ['utrecht-button--rvo-sm'] %}{% endif %}
{% if size == 'md' %}{% set css_classes = css_classes + ['utrecht-button--rvo-md'] %}{% endif %}
{% if alignToRightInGroup %}{% set css_classes = css_classes + ['rvo-action-group--align-right'] %}{% endif %}
{% if fullWidth %}{% set css_classes = css_classes + ['utrecht-button--rvo-full-width'] %}{% endif %}
{% if showIcon != 'no' and showIcon == 'before' %}{% set css_classes = css_classes + ['utrecht-button--icon-before'] %}{% endif %}
{% if showIcon != 'no' and showIcon == 'after' %}{% set css_classes = css_classes + ['utrecht-button--icon-after'] %}{% endif %}
{% if kind == 'warning' or kind == 'warning-subtle' %}{% set css_classes = css_classes + ['utrecht-button--warning'] %}{% endif %}
{% if kind == 'primary' %}{% set css_classes = css_classes + ['utrecht-button--primary-action'] %}{% endif %}
{% if kind == 'warning' %}{% set css_classes = css_classes + ['utrecht-button--primary-action'] %}{% endif %}
{% if kind == 'secondary' %}{% set css_classes = css_classes + ['utrecht-button--secondary-action'] %}{% endif %}
{% if kind == 'subtle' %}{% set css_classes = css_classes + ['utrecht-button--subtle'] %}{% endif %}
{% if kind == 'warning-subtle' %}{% set css_classes = css_classes + ['utrecht-button--subtle'] %}{% endif %}
{% if kind == 'warning' %}{% set css_classes = css_classes + ['utrecht-button--warning'] %}{% endif %}
{% if kind == 'warning-subtle' %}{% set css_classes = css_classes + ['utrecht-button--warning'] %}{% endif %}
{# Add utility classes from text-style, margin, padding attributes #}
{% set utility_classes = attributes.render_utility_classes(_component_context) %}
{% if utility_classes %}
    {% set css_classes = css_classes + utility_classes.split() %}
{% endif %}
{# Add custom classes from class attribute #}
{% if _component_context.get('class') %}
    {% set css_classes = css_classes + _component_context['class'].split() %}
{% endif %}
<button
    class="{{ css_classes | join(' ') }}"
    data-roos-component="button"
    {% if disabled %}disabled{% endif %}
    type="{{ type_attr }}"
    {{ events.render_extra_attributes(_component_context) }}>
    {% if icon_placement == 'before' %}<span class="utrecht-icon rvo-icon rvo-icon-{{ icon }} rvo-icon--{{ size }} rvo-icon--{{ color }}" role="img" aria-label="{{ iconAriaLabel | title }}"></span>{% endif %}{{ children if children else label | safe }}{% if icon_placement == 'after' %}<span class="utrecht-icon rvo-icon rvo-icon-{{ icon }} rvo-icon--{{ size }} rvo-icon--{{ icon_color }}" role="img" aria-label="{{ iconAriaLabel | title }}"></span>{% endif %}
</button>