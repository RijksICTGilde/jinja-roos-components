    type="{{ type }}"
    {{ events.render_extra_attributes(_component_context) }}>
    {{ React.Children.map(parseChildren(children), (child, index) => <li key={index}>{child}</li>) if _component_context.content else items?.map((itemContent, index) => <li key={index}>{itemContent}</li>) }}
