{% set id = _component_context.get('id') %}
{% set htmlFor = _component_context.get('htmlFor') %}
{% set content = _component_context.content | default('Field label') %}
{% set size = _component_context.size | default('md') %}
{% set type = _component_context.type | default('default') %}
{% set className = _component_context.get('className') %}
