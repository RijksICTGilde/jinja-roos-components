{% import 'components/_generic_attributes.j2' as attrs %}
{% set id = _component_context.id | default('') %}
{% set name = _component_context.name | default('') %}
{% set label = _component_context.label | default('') %}
{% set checked = _component_context.checked | default(false) %}
{% set disabled = _component_context.disabled | default(false) %}
{% set required = _component_context.required | default(false) %}
{% set invalid = _component_context.invalid | default(false) %}
{% set active = _component_context.active | default(false) %}
{% set hover = _component_context.hover | default(false) %}
{% set focus = _component_context.focus | default(false) %}
{% set additional_class = _component_context.class | default('') %}
{% set value = _component_context.value | default('') %}

{# Build CSS classes #}
{% set css_classes = ['rvo-radio-button'] %}
{% if active %}{% set css_classes = css_classes + ['rvo-radio-button--active'] %}{% endif %}
{% if hover %}{% set css_classes = css_classes + ['rvo-radio-button--hover'] %}{% endif %}
{% if checked %}{% set css_classes = css_classes + ['rvo-radio-button--checked'] %}
{% else %}{% set css_classes = css_classes + ['rvo-radio-button--not-checked'] %}{% endif %}
{% if disabled %}{% set css_classes = css_classes + ['rvo-radio-button--disabled'] %}{% endif %}
{% if focus %}{% set css_classes = css_classes + ['rvo-radio-button--focus-visible'] %}{% endif %}
{% if invalid %}{% set css_classes = css_classes + ['rvo-radio-button--invalid'] %}{% endif %}
{% if required %}{% set css_classes = css_classes + ['rvo-radio-button--required'] %}{% endif %}
{% if additional_class %}{% set css_classes = css_classes + [additional_class] %}{% endif %}

<label 
    class="{{ css_classes | join(' ') }}"
    {% if id %}for="{{ id }}"{% endif %}
    data-roos-component="radio">
    
    <input
        {% if id %}id="{{ id }}"{% endif %}
        {% if name %}name="{{ name }}"{% endif %}
        {% if value %}value="{{ value }}"{% endif %}
        class="rvo-radio-button__input"
        type="radio"
        {% if checked %}checked{% endif %}
        {% if disabled %}disabled{% endif %}
        {% if required %}required{% endif %}
        {% if invalid %}aria-invalid="true"{% endif %}
        data-roos-radio-input
        {{ attrs.render_extra_attributes(_component_context) }}
    />
    
    {% if label %}{{ label }}{% endif %}
</label>