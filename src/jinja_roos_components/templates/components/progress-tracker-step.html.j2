<div
    class="{{ css_classes | join(' ') }}"
    data-roos-component="progress-tracker-step"
    {{ events.render_extra_attributes(_component_context) }}>
    {% if state == 'incomplete' or state == 'doing' or state == 'completed' %}    <c-link href="{{ link }}" class="rvo-progress-tracker__step-link" @click="{{ onClick }}">{{ label }}</c-link>{% else %}    {{ label }}{% endif %}
