{% import 'components/_attribute_mixin.j2' as attributes %}
{% import 'components/_generic_attributes.j2' as attrs %}
{# Semantic wrapper for small text - renders as span with small text styling #}
{% set content = _component_context.content | default('') %}
{% set css_classes = ['rvo-text--sm'] %}
{# Add utility classes from attribute mixin #}
{% set utility_classes = attributes.render_utility_classes(_component_context) %}
{% if utility_classes %}
    {% set css_classes = css_classes + utility_classes.split() %}
{% endif %}
<span class="{{ css_classes | join(' ') }}" data-roos-component="small" {{ attrs.render_extra_attributes(_component_context) }}>{{ content | safe }}</span>
