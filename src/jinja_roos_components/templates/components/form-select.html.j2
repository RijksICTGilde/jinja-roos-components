{% import 'components/_generic_attributes.j2' as attrs %}
{% import 'components/_attribute_mixin.j2' as attributes %}
{# Auto-generated from React component: form-select
   Manual edits: wrap in MANUAL_START/MANUAL_END tags to preserve #}
{% set id = _component_context.id | default('field') %}
{% set disabled = _component_context.disabled | default(false) %}
{% set focus = _component_context.focus | default(false) %}
{% set invalid = _component_context.invalid | default(false) %}
{% set required = _component_context.required | default(false) %}
{% set options = _component_context.options | default([]) %}
{% set defaultValue = _component_context.get('defaultValue') %}
{% set value = _component_context.get('value') %}
{% set children = _component_context.content | default('') %}
{% set name = _component_context.name | default('') %}
{% set selectedValue = value if value else defaultValue %}
{% set css_classes = ['utrecht-select', 'utrecht-select--html-select'] %}
{% if disabled %}{% set css_classes = css_classes + ['utrecht-select--disabled'] %}{% endif %}
{% if focus %}{% set css_classes = css_classes + ['utrecht-select--focus'] %}{% endif %}
{% if focus %}{% set css_classes = css_classes + ['utrecht-select--focus-visible'] %}{% endif %}
{% if invalid %}{% set css_classes = css_classes + ['utrecht-select--invalid'] %}{% endif %}
{% if required %}{% set css_classes = css_classes + ['utrecht-select--required'] %}{% endif %}
{# Add utility classes from text-style, margin, padding attributes #}
{% set utility_classes = attributes.render_utility_classes(_component_context) %}
{% if utility_classes %}
    {% set css_classes = css_classes + utility_classes.split() %}
{% endif %}
{# Add custom classes from class attribute #}
{% if _component_context.get('class') %}
    {% set css_classes = css_classes + _component_context['class'].split() %}
{% endif %}
{% set wrapper_classes = ['rvo-select-wrapper'] %}
<div class="{{ wrapper_classes | join(' ') }}" data-roos-component="form-select">
    <select
        class="{{ css_classes | join(' ') }}"
        id="{{ id }}"
        {% if disabled %}disabled{% endif %}
        {% if required %}required{% endif %}
        {% if name %}name="{{ name }}"{% endif %}
        {{ attrs.render_extra_attributes(_component_context) }}>
        {% if options and options is iterable and options is not string %}
        {% for option in options %}
            <option value="{{ option.value }}"{% if selectedValue and option.value == selectedValue %} selected{% endif %}>{{ option.label }}</option>
        {% endfor %}
        {% elif children %}
        {{ children | safe }}
        {% endif %}
    </select>
</div>