{% import 'components/_attribute_mixin.j2' as attributes %}
{% import 'components/_generic_attributes.j2' as attrs %}
{# Generic div wrapper for utility classes - no default styling #}
{% set content = _component_context.content | default('') %}
{% set css_classes = [] %}
{# Add utility classes from attribute mixin #}
{% set utility_classes = attributes.render_utility_classes(_component_context) %}
{% if utility_classes %}
    {% set css_classes = utility_classes.split() %}
{% endif %}
<div{% if css_classes %} class="{{ css_classes | join(' ') }}"{% endif %} data-roos-component="div" {{ attrs.render_extra_attributes(_component_context) }}>{{ content | safe }}</div>
