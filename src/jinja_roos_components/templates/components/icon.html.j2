{% import 'components/_generic_attributes.j2' as attrs %}
{% import 'components/_attribute_mixin.j2' as attributes %}
{# Auto-generated from React component: icon
   Manual edits: wrap in MANUAL_START/MANUAL_END tags to preserve #}
{% set icon = _component_context.get('icon', 'home') %}
{% set size = _component_context.get('size', 'md') %}
{% set color = _component_context.get('color', 'hemelblauw') %}
{% set className = _component_context.get('className') %}
{% set ariaLabel = _component_context.get('ariaLabel', '') %}
{% set iconName = (icon.split(' > ')[1] | replace(' ', '-') | lower) if ' > ' in icon else icon %}
{% set css_classes = ['utrecht-icon', 'rvo-icon'] %}
{% set css_classes = css_classes + ['rvo-icon-' + iconName] %}
{% if size and size == 'xs' %}{% set css_classes = css_classes + ['rvo-icon--xs'] %}{% endif %}
{% if size and size == 'sm' %}{% set css_classes = css_classes + ['rvo-icon--sm'] %}{% endif %}
{% if size and size == 'md' %}{% set css_classes = css_classes + ['rvo-icon--md'] %}{% endif %}
{% if size and size == 'lg' %}{% set css_classes = css_classes + ['rvo-icon--lg'] %}{% endif %}
{% if size and size == 'xl' %}{% set css_classes = css_classes + ['rvo-icon--xl'] %}{% endif %}
{% if size and size == '2xl' %}{% set css_classes = css_classes + ['rvo-icon--2xl'] %}{% endif %}
{% if size and size == '3xl' %}{% set css_classes = css_classes + ['rvo-icon--3xl'] %}{% endif %}
{% if size and size == '4xl' %}{% set css_classes = css_classes + ['rvo-icon--4xl'] %}{% endif %}
{% if color == 'hemelblauw' %}{% set css_classes = css_classes + ['rvo-icon--hemelblauw'] %}{% endif %}
{% if color == 'donkerblauw' %}{% set css_classes = css_classes + ['rvo-icon--donkerblauw'] %}{% endif %}
{% if color == 'lintblauw' %}{% set css_classes = css_classes + ['rvo-icon--lintblauw'] %}{% endif %}
{% if color == 'wit' %}{% set css_classes = css_classes + ['rvo-icon--wit'] %}{% endif %}
{% if color == 'zwart' %}{% set css_classes = css_classes + ['rvo-icon--zwart'] %}{% endif %}
{% if color == 'grijs-700' %}{% set css_classes = css_classes + ['rvo-icon--grijs-700'] %}{% endif %}

{#MANUAL_START#}
{% set color_lower = color.lower() if color else '' %}
{% set is_named_color = color_lower in rvo_color_names %}
{% set is_hex_color = color.startswith('#') if color else false %}
{% set resolved_color = 'var(--rvo-color-' + color_lower + ')' if is_named_color else color %}
{#MANUAL_END#}

{# Add utility classes from text-style, margin, padding attributes #}
{% set utility_classes = attributes.render_utility_classes(_component_context) %}
{% if utility_classes %}
    {% set css_classes = css_classes + utility_classes.split() %}
{% endif %}
{# Add custom classes from class attribute #}
{% if _component_context.get('class') %}
    {% set css_classes = css_classes + _component_context['class'].split() %}
{% endif %}
<span
    class="{{ css_classes | join(' ') }}"
    data-roos-component="icon"
    {#MANUAL_START#}
    {% if is_named_color or is_hex_color %}style="background-color: {{ resolved_color }};"{% endif %}
    {#MANUAL_END#}
    {{ attrs.render_extra_attributes(_component_context) }}>
</span>