{% extends "docs-layout.html.j2" %}

{% block title %}ROOS Colors Reference{% endblock %}
{% block page_title %}Color Palette{% endblock %}
{% block footer_stats %}{{ colors|length }} colors{% endblock %}

{% block page_content %}
<c-heading type="h2" textContent="Color Palette" />
<p>Essential colors organized by primary, accent, and neutral tones.</p>

<c-layout-flow gap="xl" style="margin-top: 2rem;">
    {% set color_groups = colors | groupby('base_color') %}
    {% for base_color, color_list in color_groups %}
    
    <section>
        <c-heading type="h3" textContent="{{ base_color.title() }}" style="margin-bottom: 1rem; color: #01689b;" />
        
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 1rem;">
            {% for color in color_list %}
            <c-card padding="md">
                <div style="
                    height: 60px; 
                    background-color: {{ color.hex }}; 
                    border-radius: 4px; 
                    margin-bottom: 0.75rem;
                    border: 1px solid rgba(0,0,0,0.1);
                    position: relative;
                ">
                    <span style="
                        position: absolute;
                        bottom: 4px;
                        right: 6px;
                        background: rgba(255,255,255,0.95); 
                        padding: 2px 4px; 
                        border-radius: 2px; 
                        font-size: 0.7rem; 
                        font-weight: 600;
                        color: #333;
                        font-family: monospace;
                    ">{{ color.hex }}</span>
                </div>
                
                <c-heading type="h5" textContent="{{ color.display_name }}" style="font-weight: 600; margin-bottom: 0.25rem;" />
                <div style="font-size: 0.8rem; color: #666; font-family: monospace;">color="{{ color.template_name }}"</div>
            </c-card>
            {% endfor %}
        </div>
    </section>
    {% endfor %}
</c-layout-flow>
{% endblock %}