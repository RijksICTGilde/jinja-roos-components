{
  "$schema": "https://raw.githubusercontent.com/JetBrains/web-types/master/schema/web-types.json",
  "name": "jinja-roos-components",
  "version": "1.0.0",
  "description": "RVO Design System components for Jinja2 templates",
  "contributions": {
    "html": {
      "elements": [
        {
          "name": "c-button",
          "description": "RVO Button component for actions and navigation",
          "doc-url": "https://rvo.nl/design-system/components/button",
          "attributes": [
            {
              "name": "label",
              "description": "The text content of the button",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "kind",
              "description": "The visual style of the button",
              "value": {
                "type": "enum",
                "required": false,
                "default": "primary",
                "enum": [
                  "primary",
                  "secondary",
                  "tertiary",
                  "quaternary",
                  "warning",
                  "warning-subtle",
                  "subtle"
                ]
              }
            },
            {
              "name": "size",
              "description": "The size of the button",
              "value": {
                "type": "enum",
                "required": false,
                "default": "md",
                "enum": [
                  "sm",
                  "md",
                  "lg",
                  "xl"
                ]
              }
            },
            {
              "name": "type",
              "description": "The HTML button type attribute",
              "value": {
                "type": "enum",
                "required": false,
                "default": "button",
                "enum": [
                  "button",
                  "submit",
                  "reset"
                ]
              }
            },
            {
              "name": "icon",
              "description": "Icon to display in the button",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "showIcon",
              "description": "Position of the icon relative to the label",
              "value": {
                "type": "enum",
                "required": false,
                "default": "no",
                "enum": [
                  "no",
                  "before",
                  "after",
                  "only"
                ]
              }
            },
            {
              "name": "disabled",
              "description": "Whether the button is disabled",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "busy",
              "description": "Whether the button shows a busy/loading state",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "active",
              "description": "Whether the button is in active state",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "fullWidth",
              "description": "Whether the button should take full width of its container",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "@click",
              "description": "Click event handler",
              "value": {
                "type": "string",
                "required": false
              }
            }
          ]
        },
        {
          "name": "c-text-input-field",
          "description": "RVO Text input field with label, helper text, and validation",
          "doc-url": "https://rvo.nl/design-system/components/text-input",
          "attributes": [
            {
              "name": "id",
              "description": "Unique identifier for the input field",
              "value": {
                "type": "string",
                "required": true
              }
            },
            {
              "name": "name",
              "description": "Name attribute for form submission",
              "value": {
                "type": "string",
                "required": true
              }
            },
            {
              "name": "label",
              "description": "Label text for the input field",
              "value": {
                "type": "string",
                "required": true
              }
            },
            {
              "name": "value",
              "description": "Initial value of the input field",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "placeholder",
              "description": "Placeholder text when field is empty",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "type",
              "description": "HTML input type",
              "value": {
                "type": "enum",
                "required": false,
                "default": "text",
                "enum": [
                  "text",
                  "email",
                  "password",
                  "tel",
                  "url",
                  "number",
                  "search"
                ]
              }
            },
            {
              "name": "helperText",
              "description": "Helper text displayed below the input",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "errorText",
              "description": "Error message to display",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "warningText",
              "description": "Warning message to display",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "required",
              "description": "Whether the field is required",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "disabled",
              "description": "Whether the field is disabled",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "readonly",
              "description": "Whether the field is read-only",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "pattern",
              "description": "Regex pattern for validation",
              "value": {
                "type": "string",
                "required": false
              }
            },
            {
              "name": "maxlength",
              "description": "Maximum length of input",
              "value": {
                "type": "number",
                "required": false
              }
            },
            {
              "name": "expandableHelperText",
              "description": "Whether helper text is expandable",
              "value": {
                "type": "boolean",
                "required": false,
                "default": "false"
              }
            },
            {
              "name": "expandableHelperTextTitle",
              "description": "Title for expandable helper text",
              "value": {
                "type": "string",
                "required": false
              }
            }
          ]
        }
      ],
      "description-markup": "markdown",
      "types-syntax": "typescript"
    }
  }
}