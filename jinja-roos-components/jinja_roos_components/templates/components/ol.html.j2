{% set items_value = _component_context.get('items', []) %}
{% set no_margin = _component_context.noMargin | default(false) %}
{% set no_padding = _component_context.noPadding | default(false) %}
{% set additional_class = _component_context.class | default('') %}
{% set content = _component_context.content | default('') %}

{# Build CSS classes for ordered list #}
{% set css_classes = ['rvo-ol'] %}
{% if no_margin %}{% set css_classes = css_classes + ['rvo-ol--no-margin'] %}{% endif %}
{% if no_padding %}{% set css_classes = css_classes + ['rvo-ol--no-padding'] %}{% endif %}
{% if additional_class %}{% set css_classes = css_classes + [additional_class] %}{% endif %}

<ol class="{{ css_classes | join(' ') }}" data-roos-component="ol">
    {% if content %}
        {# Render nested content (e.g., c-li components) #}
        {{ content | safe }}
    {% else %}
        {# Render items from array attribute #}
        {% for item in items_value %}
            <li>{{ item | safe }}</li>
        {% endfor %}
    {% endif %}
</ol>