{# Event handler mixin for components #}
{# This macro processes event attributes and generates proper HTML event handlers #}

{% macro render_events(component_context) -%}
    {# Mouse events #}
    {% if component_context.get('@click') %}onclick="{{ component_context['@click'] }}"{% endif %}
    {% if component_context.get('@dblclick') %}ondblclick="{{ component_context['@dblclick'] }}"{% endif %}
    {% if component_context.get('@mousedown') %}onmousedown="{{ component_context['@mousedown'] }}"{% endif %}
    {% if component_context.get('@mouseup') %}onmouseup="{{ component_context['@mouseup'] }}"{% endif %}
    {% if component_context.get('@mouseover') %}onmouseover="{{ component_context['@mouseover'] }}"{% endif %}
    {% if component_context.get('@mouseout') %}onmouseout="{{ component_context['@mouseout'] }}"{% endif %}
    {% if component_context.get('@mouseenter') %}onmouseenter="{{ component_context['@mouseenter'] }}"{% endif %}
    {% if component_context.get('@mouseleave') %}onmouseleave="{{ component_context['@mouseleave'] }}"{% endif %}
    {% if component_context.get('@mousemove') %}onmousemove="{{ component_context['@mousemove'] }}"{% endif %}
    {% if component_context.get('@contextmenu') %}oncontextmenu="{{ component_context['@contextmenu'] }}"{% endif %}
    
    {# Keyboard events #}
    {% if component_context.get('@keydown') %}onkeydown="{{ component_context['@keydown'] }}"{% endif %}
    {% if component_context.get('@keyup') %}onkeyup="{{ component_context['@keyup'] }}"{% endif %}
    {% if component_context.get('@keypress') %}onkeypress="{{ component_context['@keypress'] }}"{% endif %}
    
    {# Focus events #}
    {% if component_context.get('@focus') %}onfocus="{{ component_context['@focus'] }}"{% endif %}
    {% if component_context.get('@blur') %}onblur="{{ component_context['@blur'] }}"{% endif %}
    {% if component_context.get('@focusin') %}onfocusin="{{ component_context['@focusin'] }}"{% endif %}
    {% if component_context.get('@focusout') %}onfocusout="{{ component_context['@focusout'] }}"{% endif %}
    
    {# Form events #}
    {% if component_context.get('@submit') %}onsubmit="{{ component_context['@submit'] }}"{% endif %}
    {% if component_context.get('@change') %}onchange="{{ component_context['@change'] }}"{% endif %}
    {% if component_context.get('@input') %}oninput="{{ component_context['@input'] }}"{% endif %}
    {% if component_context.get('@invalid') %}oninvalid="{{ component_context['@invalid'] }}"{% endif %}
    {% if component_context.get('@reset') %}onreset="{{ component_context['@reset'] }}"{% endif %}
    {% if component_context.get('@search') %}onsearch="{{ component_context['@search'] }}"{% endif %}
    {% if component_context.get('@select') %}onselect="{{ component_context['@select'] }}"{% endif %}
    
    {# Touch events #}
    {% if component_context.get('@touchstart') %}ontouchstart="{{ component_context['@touchstart'] }}"{% endif %}
    {% if component_context.get('@touchend') %}ontouchend="{{ component_context['@touchend'] }}"{% endif %}
    {% if component_context.get('@touchmove') %}ontouchmove="{{ component_context['@touchmove'] }}"{% endif %}
    {% if component_context.get('@touchcancel') %}ontouchcancel="{{ component_context['@touchcancel'] }}"{% endif %}
    
    {# Drag events #}
    {% if component_context.get('@drag') %}ondrag="{{ component_context['@drag'] }}"{% endif %}
    {% if component_context.get('@dragstart') %}ondragstart="{{ component_context['@dragstart'] }}"{% endif %}
    {% if component_context.get('@dragend') %}ondragend="{{ component_context['@dragend'] }}"{% endif %}
    {% if component_context.get('@dragenter') %}ondragenter="{{ component_context['@dragenter'] }}"{% endif %}
    {% if component_context.get('@dragleave') %}ondragleave="{{ component_context['@dragleave'] }}"{% endif %}
    {% if component_context.get('@dragover') %}ondragover="{{ component_context['@dragover'] }}"{% endif %}
    {% if component_context.get('@drop') %}ondrop="{{ component_context['@drop'] }}"{% endif %}
    
    {# Clipboard events #}
    {% if component_context.get('@copy') %}oncopy="{{ component_context['@copy'] }}"{% endif %}
    {% if component_context.get('@cut') %}oncut="{{ component_context['@cut'] }}"{% endif %}
    {% if component_context.get('@paste') %}onpaste="{{ component_context['@paste'] }}"{% endif %}
    
    {# Media events #}
    {% if component_context.get('@play') %}onplay="{{ component_context['@play'] }}"{% endif %}
    {% if component_context.get('@pause') %}onpause="{{ component_context['@pause'] }}"{% endif %}
    {% if component_context.get('@ended') %}onended="{{ component_context['@ended'] }}"{% endif %}
    
    {# Window events #}
    {% if component_context.get('@scroll') %}onscroll="{{ component_context['@scroll'] }}"{% endif %}
    {% if component_context.get('@resize') %}onresize="{{ component_context['@resize'] }}"{% endif %}
    {% if component_context.get('@load') %}onload="{{ component_context['@load'] }}"{% endif %}
    {% if component_context.get('@unload') %}onunload="{{ component_context['@unload'] }}"{% endif %}
    {% if component_context.get('@beforeunload') %}onbeforeunload="{{ component_context['@beforeunload'] }}"{% endif %}
    
    {# Other events #}
    {% if component_context.get('@error') %}onerror="{{ component_context['@error'] }}"{% endif %}
    {% if component_context.get('@abort') %}onabort="{{ component_context['@abort'] }}"{% endif %}
    {% if component_context.get('@toggle') %}ontoggle="{{ component_context['@toggle'] }}"{% endif %}
    
    {# Support for HTMX attributes if HTMX is enabled #}
    {% if roos_htmx %}
        {% if component_context.get('@hx-get') %}hx-get="{{ component_context['@hx-get'] }}"{% endif %}
        {% if component_context.get('@hx-post') %}hx-post="{{ component_context['@hx-post'] }}"{% endif %}
        {% if component_context.get('@hx-put') %}hx-put="{{ component_context['@hx-put'] }}"{% endif %}
        {% if component_context.get('@hx-patch') %}hx-patch="{{ component_context['@hx-patch'] }}"{% endif %}
        {% if component_context.get('@hx-delete') %}hx-delete="{{ component_context['@hx-delete'] }}"{% endif %}
        {% if component_context.get('@hx-trigger') %}hx-trigger="{{ component_context['@hx-trigger'] }}"{% endif %}
        {% if component_context.get('@hx-target') %}hx-target="{{ component_context['@hx-target'] }}"{% endif %}
        {% if component_context.get('@hx-swap') %}hx-swap="{{ component_context['@hx-swap'] }}"{% endif %}
        {% if component_context.get('@hx-boost') %}hx-boost="{{ component_context['@hx-boost'] }}"{% endif %}
        {% if component_context.get('@hx-push-url') %}hx-push-url="{{ component_context['@hx-push-url'] }}"{% endif %}
        {% if component_context.get('@hx-select') %}hx-select="{{ component_context['@hx-select'] }}"{% endif %}
        {% if component_context.get('@hx-select-oob') %}hx-select-oob="{{ component_context['@hx-select-oob'] }}"{% endif %}
        {% if component_context.get('@hx-indicator') %}hx-indicator="{{ component_context['@hx-indicator'] }}"{% endif %}
        {% if component_context.get('@hx-params') %}hx-params="{{ component_context['@hx-params'] }}"{% endif %}
        {% if component_context.get('@hx-vals') %}hx-vals="{{ component_context['@hx-vals'] }}"{% endif %}
        {% if component_context.get('@hx-confirm') %}hx-confirm="{{ component_context['@hx-confirm'] }}"{% endif %}
        {% if component_context.get('@hx-disable') %}hx-disable="{{ component_context['@hx-disable'] }}"{% endif %}
        {% if component_context.get('@hx-headers') %}hx-headers="{{ component_context['@hx-headers'] }}"{% endif %}
    {% endif %}
{%- endmacro %}

{# Macro to render data attributes #}
{% macro render_data_attributes(component_context) -%}
    {% for key, value in component_context.items() %}
        {% if key.startswith('data-') %}
            {{ key }}="{{ value }}"
        {% endif %}
    {% endfor %}
{%- endmacro %}

{# Macro to render aria attributes #}
{% macro render_aria_attributes(component_context) -%}
    {% for key, value in component_context.items() %}
        {% if key.startswith('aria-') %}
            {{ key }}="{{ value }}"
        {% endif %}
    {% endfor %}
{%- endmacro %}

{# Combined macro for all extra attributes #}
{% macro render_extra_attributes(component_context) -%}
    {{ render_events(component_context) }} {{ render_data_attributes(component_context) }} {{ render_aria_attributes(component_context) }}
{%- endmacro %}