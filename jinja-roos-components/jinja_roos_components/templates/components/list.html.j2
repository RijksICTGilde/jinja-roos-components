{% set items_value = _component_context.get('items', []) %}
{% set additional_class = _component_context.class | default('') %}
{% set content = _component_context.content | default('') %}

{# Build CSS classes for item list #}
{% set css_classes = ['rvo-item-list'] %}
{% if additional_class %}{% set css_classes = css_classes + [additional_class] %}{% endif %}

<ul class="{{ css_classes | join(' ') }}" data-roos-component="list">
    {% if content %}
        {# Render nested content (e.g., c-list-item components) #}
        {{ content | safe }}
    {% else %}
        {# Render items from array attribute #}
        {% for item in items_value %}
            <li class="rvo-item-list__item">{{ item | safe }}</li>
        {% endfor %}
    {% endif %}
</ul>