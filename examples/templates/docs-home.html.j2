{% extends "docs-layout.html.j2" %}

{% block title %}ROOS Components Documentation{% endblock %}
{% block page_title %}ROOS Components Documentation{% endblock %}
{% block footer_stats %}Live Documentation & Examples{% endblock %}

{% block page_content %}

<!-- Hero Section -->
<c-hero
    title="ROOS Components Documentation"
    subtitle="Complete design system with live examples and interactive documentation"
    size="lg"
    image='{"src": "/static/hero-components.jpg", "alt": "ROOS Components"}'
/>

<c-layout-flow gap="3xl" size="lg">
    
    <!-- Main Documentation Grid -->
    <c-grid columns="two" gap="xl">
        
        <!-- Documentation Section -->
        <c-card padding="xl" outline="true">
            <c-icon icon="info" size="2xl" color="hemelblauw" />
            <c-heading type="h2" textContent="Live Documentation" />
            <p>Browse the complete design system with live examples and real-time rendering.</p>
            
            <c-grid columns="two" gap="md">
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="document-met-lijnen" size="lg" color="hemelblauw" />
                    <c-heading type="h4" textContent="Components Reference" />
                    <p>Complete component library with attributes and examples</p>
                    <c-link href="/docs/components">View Components →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="kleurenwaaier" size="lg" color="oranje" />
                    <c-heading type="h4" textContent="Colors Palette" />
                    <p>Brand colors organized by primary, accent, and neutral tones</p>
                    <c-link href="/docs/colors">View Colors →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="iconen-toevoegen" size="lg" color="groen" />
                    <c-heading type="h4" textContent="Icons Library" />
                    <p>Complete icon set categorized and searchable with copy functionality</p>
                    <c-link href="/docs/icons">View Icons →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="grafiek" size="lg" color="rood" />
                    <c-heading type="h4" textContent="Spacing & Sizing" />
                    <p>Consistent spacing and sizing tokens for layouts</p>
                    <c-link href="/docs/spacing">View Spacing →</c-link>
                </c-card>
            </c-grid>
        </c-card>
        
        <!-- Examples Section -->
        <c-card padding="xl" outline="true">
            <c-icon icon="presentatie-voor-groep" size="2xl" color="hemelblauw" />
            <c-heading type="h2" textContent="Live Examples" />
            <p>See components in action with real templates and interactive examples.</p>
            
            <c-grid columns="two" gap="md">
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="document-blanco" size="lg" color="hemelblauw" />
                    <c-heading type="h4" textContent="Simple Page" />
                    <p>Basic page structure example</p>
                    <c-link href="/render?template=simple-page.html.j2">View Example →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="klembord-met-vinkje" size="lg" color="oranje" />
                    <c-heading type="h4" textContent="Form Components" />
                    <p>Complete form elements showcase</p>
                    <c-link href="/render?template=form-field-components.html.j2">View Example →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="vergadertafel-met-stoelen" size="lg" color="groen" />
                    <c-heading type="h4" textContent="Layout Structure" />
                    <p>Grid and layout component examples</p>
                    <c-link href="/render?template=advanced-form-patterns.html.j2">View Example →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="wereldbol" size="lg" color="rood" />
                    <c-heading type="h4" textContent="Complete Website" />
                    <p>Full website example with all components</p>
                    <c-link href="/render?template=complete-website-example.html.j2">View Example →</c-link>
                </c-card>
                
                <c-card padding="md" outline="true" backgroundColor="grijs-050">
                    <c-icon icon="presentatie-voor-groep" size="lg" color="donkerblauw" />
                    <c-heading type="h4" textContent="Live Demo" />
                    <p>Interactive demonstration space for testing components</p>
                    <c-link href="/live-demo">Open Live Demo →</c-link>
                </c-card>
            </c-grid>
        </c-card>
        
    </c-grid>
    
    <!-- Quick Start Section -->
    <c-card padding="xl" class="rvo-highlight-section">
        <c-layout-flow gap="lg" alignItems="center" size="uncentered">
            <c-icon icon="ster" size="4xl" color="hemelblauw" />
            <c-heading type="h2" textContent="Ready to Get Started?" />
            <p>Start building with ROOS components today. Browse the documentation, try the examples, and build consistent government interfaces.</p>
            <c-layout-flow gap="md" row="true" justifyContent="center">
                <c-button kind="primary" size="md" label="Browse Components" @click="window.location.href='/docs/components'" />
                <c-button kind="secondary" size="md" label="View on GitHub" @click="window.open('https://github.com/RijksICTGilde/jinja-roos-components', '_blank')" />
            </c-layout-flow>
        </c-layout-flow>
    </c-card>

</c-layout-flow>

<!-- Add some custom CSS for enhanced styling -->
<style>
.rvo-link-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
}

.rvo-link-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.rvo-feature-card {
    text-align: center;
}

.rvo-highlight-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: 2px solid #007BC7;
    text-align: center;
}
</style>

{% endblock %}